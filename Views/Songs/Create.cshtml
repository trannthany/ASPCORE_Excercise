@model WebApplication_Practice.Models.Song

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyAlbumID" class="control-label"></label>
                <select asp-for="MyAlbumID" class ="form-control" asp-items="ViewBag.MyAlbumID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SongUrl" class="control-label"></label>
                <input id="songUrl" type="file" asp-for="SongUrl" onchange="document.getElementById('songUrl').src = window.URL.createObjectURL(this.files[0])" class="form-control" />
                <span asp-validation-for="SongUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

